// npm run eslint --init で洗濯しながら、設定することも可能
{
  "extends": [
    "eslint:recommended"
    // "prettier"
  ],
  "parserOptions": {
    // "ecmaVersion": 2017
    "sourceType": "module",
    "requireConfigFile": false
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "@babel/eslint-parser",
  "root": true,
  "globals": {
    // jquery適応の場合
    "jQuery": "readonly",
    "$": "readonly",
    "emailjs": true
  },
  "rules": {
    // "no-undef": [
    //   "off"
    // ],
    "semi": [
      "error",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ]
  }
}